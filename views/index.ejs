<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather</title>
    <!-- bootstrap and jQuery -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
    <!-- own css -->
    <link rel="stylesheet" href="/css/index.css" type="text/css" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- SERACH PANEL -->
            <div class="col-md-6 col-sm-12">
                <div class="card text-left mt-3">
                    <form class="form p-3">
                        <div class="form-group m-0">
                            <label class="pl-2 pr-2">Digite a cidade</label>
                            <input id="searchbar" placeholder="cidade" class="form-control d-inline-block w-50"
                                type="text" />
                            <button id="searchbtn" class="btn btn-info ml-2 mb-1" type="submit">Buscar</button>
                        </div>
                    </form>

                    <div id="weather_data" class="mt-1 p-2 pl-4">
                        <h1>
                            <span id="city"></span>,
                            <span id="country"></span>
                        </h1>
                        <p id="time_weather">
                            <span id="day_name"></span>,
                            <span id="hour"></span>,
                            <span id="weather"></span>
                        </p>
                        <div>
                            <span id="temperature"></span>
                            <img alt="icone de clima" id="weather_icon" src="http://openweathermap.org/img/w/50d.png" />
                        </div>
                        <img src="/img/humidity.svg" alt="porcentagem humidade" width="25" />
                        <span class="pl-2"><span id="humidity"></span>%</span>
                    </div>
                    <div id="weather_warning" class="mt-1 p-2 pl-4 text-center">

                    </div>
                </div>
            </div>
            <!-- HISTORY PANEL -->
            <div class=" col-md-6 col-sm-12">
                <div class="card p-3 text-left mt-3">
                    <h2>Top 5 cidades mais pesquisadas</h2>
                    <ul id="searched_cities" class="m-0 p-0">
                        <% searchedCities.forEach(function(searchedCity) { %>
                        <li class="d_block pl-2 pr-2"><span
                                class="badge badge-pill badge-light p-2"><%= searchedCity.name %></span></li>
                        <% });%>
                    </ul>
                    <hr />
                    <ul id="recent_cities" class="list-group">
                        <% recentCities.forEach(function(recentCity) { %>
                        <li class="last_city list-group-item p-2"><%= recentCity.name %>,
                            <%= recentCity.temperature %> Â°C, <%= recentCity.weather %> <%= recentCity.time%></li>
                        <% });%>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- scripts -->
    <script src="/js/index.js"></script>
</body>

</html>